<h1>All Posts</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th colspan="2">Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
            <tr>
                <td>{{_id}}</td>
                <td><img src="/uploads/{{file}}" height="60"></td>
                <td>{{title}}</td>
                <td>{{status}}</td>
                <td>{{category._id}} {{category.name}}</td>
                <td>{{allowComments}}</td>
                <td>{{generateTime date 'MMMM Do YYYY'}}</td>
                <td><a href="/post/{{slug}}" class="btn btn-primary">View</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>
